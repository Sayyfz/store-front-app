{
    "version": 2,
    "builds": [
        {
            "src": "src/**/*.ts",
            "use": "vercel/node",
            "config": {
                "maxLambdaSize": "15mb",
                "buildCommand": "npm run build",
                "outputDirectory": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "dist/server.js"
        }
    ]
}
